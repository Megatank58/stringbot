{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": ".build",
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "pretty": true,
        "module": "es2022",
        "target": "es2021",
        "sourceMap": false,
        "skipDefaultLibCheck": true
    },
    "buildOptions": {
        "verbose": true
    }
}