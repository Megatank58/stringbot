{
  "name": "megabot",
  "version": "1.0.0",
  "description": "A bot for managing everything in your server.",
  "main": "src/.build/index.js",
  "private": true,
  "workspaces": ["src", "packages/*"],
  "scripts": {
    "start": "node .",
    "dev": "tsc --project src/tsconfig.json && tsc --build && node .",
    "lint": " yarn eslint src",
    "lint:fix": "yarn eslint src --fix",
    "deploy": "tsc --project src/tsconfig.json && node .build/deploy-commands.js",
    "build": "rm -rf .build && tsc --project src/tsconfig.json",
    "build:sub": "tsc --build",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "author": "@megatank58",
  "license": "MIT"
}